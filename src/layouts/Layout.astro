---
import Header from '@components/Header.astro'
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='min-h-screen overflow-x-hidden'>
		<Header />
		<slot />
	</body>
</html>

<style>
	@font-face {
		font-family: 'Anybody';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('fonts/anybody.woff2') format('woff2');
	}

	@font-face {
		font-family: 'Anybody Black';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('fonts/anybody-black.woff2') format('woff2');
	}

	html,
	body {
		font-family: 'Anybody', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
			Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
