---
import Container from './Container.astro'
---

<section
	class='text-sm text-white p-8 bg-gradient-to-tr from-black via-black to-principal border-white border-t-2 border-b-2'
>
	<Container>
		<div class='flex justify-center flex-wrap gap-10'>
			<div class='col-span-3'>
				<div class='grid grid-cols-3 lg:grid-cols-5 gap-5 items-center'>
					<a href='https://intel.com/' target='_blank'>
						<img
							class='aspect-[84/46] mx-auto max-h-10'
							src='/logos/sponsors/intel.png'
							alt='Logo Intel Patrocinador'
							loading='lazy'
							decoding='async'
							fetchpriority='low'
						/>
					</a>
					<a href='https://hp.com/' target='_blank'>
						<img
							class='aspect-[92/28] mx-auto max-h-10'
							src='/logos/sponsors/omen.png'
							alt='Logo HP Patrocinador'
							loading='lazy'
							decoding='async'
							fetchpriority='low'
						/>
					</a>
					<a href='https://www.pccomponentes.com/' target='_blank'>
						<img
							class='aspect-[88/33] mx-auto max-h-10'
							src='/logos/sponsors/pccomp.png'
							alt='Logo PCComponentes Patrocinador'
							loading='lazy'
							decoding='async'
							fetchpriority='low'
						/>
					</a>
					<a href='https://redbull.com/' target='_blank'>
						<img
							class='aspect-[59/37] mx-auto max-h-10'
							src='/logos/sponsors/redbull.png'
							alt='Logo RedBull Patrocinador'
							loading='lazy'
							decoding='async'
							fetchpriority='low'
						/>
					</a>
					<a href='https://www.samsung.com/' target='_blank'>
						<img
							class='aspect-[89/37] mx-auto max-h-10'
							src='/logos/sponsors/samsung.png'
							alt='Logo Samsung Patrocinador'
							loading='lazy'
							decoding='async'
							fetchpriority='low'
						/>
					</a>
				</div>
			</div>
		</div>
	</Container>
</section>
