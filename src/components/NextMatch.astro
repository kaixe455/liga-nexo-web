---
const { local, visitant } = Astro.props
const scoreStyles = {
	shared:
		'w-20 md:w-32 text-center whitespace-nowrap font-title rounded-md p-2 px-4 md:px-10 text-sm lg:text-4xl leading-none text-center',
	played: 'text-white bg-gray-700',
	pending: 'bg-gray-200 transition group-hover:bg-gray-200'
}
const text = 'vs'
const state = 'pending'
---

<tr
	class='odd:bg-white even:bg-slate-100 flex justify-between group border-y [&>td]:py-2 transition hover:bg-gray-100'
>
	<td class='lg:px-2 py-4 border-b-1 flex flex-col md:flex-row justify-end items-center w-full'>
		<a class='flex justify-start items-center' title={local} href={`/team/${local}`}>
			{
				(
					<span class='font-black text-xl' title={local}>
						{local}
					</span>
				)
			}
			<img
				class='w-16 h-16 lg:w-20 lg:h-20 xl:w-28 xl:h-28 mx-2'
				src={'https://liga-nexo-api.liga-nexo.workers.dev/static/logos/magna.svg'}
				alt={`Escudo del equipo ${local}`}
			/>
		</a>
	</td>

	<td class='border-b-1 text-center flex justify-center w-full items-center font-black text-4xl'>
		<span class={`${scoreStyles.shared} ${scoreStyles[state]}`}>{text}</span>
	</td>

	<td class='lg:px-2 py-4 border-b-1 flex flex-col md:flex-row justify-start items-center w-full'>
		<a
			class='flex justify-end items-center'
			title={visitant}
			href={`/team/${visitant}`}
			class='order-2 2xl:order-1'
		>
			<img
				class='w-16 h-16 lg:w-28 lg:h-28 mx-2'
				src={'https://liga-nexo-api.liga-nexo.workers.dev/static/logos/oxygen-valiants.svg'}
				alt={`Escudo del equipo ${visitant}`}
			/>
			{
				(
					<span class='font-black text-xl' title={visitant}>
						{visitant}
					</span>
				)
			}
		</a>
	</td>
</tr>
